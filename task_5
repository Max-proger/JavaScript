let a = parseInt(prompt('Введите 1 число')), b = parseInt(prompt('Введите 2 число'));
function addition(x, y) {
    return x + y;
}

function subtraction(x, y) {
    return x - y;
}

function composition(x, y) {
    return x * y;
}

function segmentation(x, y) {
    return x / y;
}

console.log(`Сумма чисел ${addition(a, b)}, разность чисел ${subtraction(a, b)}, произведение чисел ${composition(a, b)}, деление чисел ${segmentation(a, b)}`)